<?xml version="1.0" encoding="UTF-8"?>
<package name="de.joshsboard.jCoins" xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/maelstrom/package.xsd">
	<packageinformation>
		<packagename><![CDATA[Creditsystem jCoins]]></packagename>
		<packagename language="de"><![CDATA[Guthabensystem jCoins]]></packagename>
		<packagedescription><![CDATA[A credit system for WCF2.]]></packagedescription>
		<packagedescription language="de"><![CDATA[Ein Guthabensystem für das Woltlab Community Framework.]]></packagedescription>
		<version>1.0.1</version>
		<date>2013-12-28</date>
	</packageinformation>
	
	<authorinformation>
		<author><![CDATA[Joshua Rüsweg]]></author>
		<authorurl><![CDATA[http://www.joshsboard.de/]]></authorurl>
	</authorinformation>
	
	<requiredpackages>
		<requiredpackage minversion="2.0.0 RC 3">com.woltlab.wcf</requiredpackage>
		<requiredpackage minversion="2.0.0 Beta 9">com.woltlab.wcf.conversation</requiredpackage>
		<requiredpackage minversion="1.0.0" file="requirements/de.joshsboard.tempusergroup.tar">de.joshsboard.tempusergroup</requiredpackage>
	</requiredpackages>
	
	<instructions type="install">
		<!-- files -->
		<instruction type="template">files/templates.tar</instruction>
		<instruction type="file">files/files.tar</instruction>
		<instruction type="acpTemplate">files/acptemplates.tar</instruction>
                
		<!-- sql -->
		<instruction type="sql">sql/install.sql</instruction>
                
		<!-- xml -->
		<instruction type="templateListener">xml/templateListener.xml</instruction>
		<instruction type="option">xml/options.xml</instruction>
		<instruction type="eventListener">xml/eventListener.xml</instruction>
		<instruction type="cronjob">xml/cronjob.xml</instruction>
		<instruction type="objectType">xml/objectType.xml</instruction>
		<instruction type="userNotificationEvent">xml/userNotificationEvent.xml</instruction>
		<instruction type="userGroupOption">xml/userGroupOption.xml</instruction>
		<instruction type="acpMenu">xml/acpMenu.xml</instruction>
                
		<!-- lng -->
		<instruction type="language">lang/*.xml</instruction>
	</instructions>
	
	<instructions type="update" fromversion="1.0.0 pl 1">
		<instruction type="file">files/files.tar</instruction>
		<instruction type="template">files/templates.tar</instruction>
	</instructions>
</package>
